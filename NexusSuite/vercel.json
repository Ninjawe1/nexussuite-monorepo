{
  "version": 2,
  "regions": ["iad1"],
  "functions": {
    "api/**": {
      "memory": 1024,
      "includeFiles": "dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[[...route]]" },
    { "source": "/assets/(.*)", "destination": "/public/assets/$1" },
    { "source": "/(.*)", "destination": "/public/index.html" }
  ]
}
