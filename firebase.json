{
  "firestore": {
    "database": "(default)",
    "location": "me-central2",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs20"
    }
  ],
  "hosting": {
    "public": "server/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "api", "region": "me-central2" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
