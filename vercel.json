{
  "version": 2,
  "functions": {
    "api/**": {
      "memory": 1024,
      "includeFiles": "NexusSuite/dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[[...route]]" },
    { "source": "/assets/(.*)", "destination": "/NexusSuite/public/assets/$1" },
    { "source": "/(.*)", "destination": "/NexusSuite/public/index.html" }
  ]
}
