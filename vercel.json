{
  "version": 2,
  "buildCommand": "cd NexusSuite/client && npm ci --include=dev && npm run build",
  "outputDirectory": "NexusSuite/client/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://api.nexus-suite.app/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },
    { "source": "/manifest(.*)", "destination": "/manifest$1" },
    { "source": "/robots.txt", "destination": "/robots.txt" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
